{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": ""
  },
  "options": {
    "draftAndPublish": true,
    "populateCreatorFields": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "sub_title": {
      "type": "text"
    },
    "main_image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "menus": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::menu.menu",
      "mappedBy": "articles"
    },
    "featured": {
      "type": "boolean",
      "default": false,
      "required": false
    },
    "tags": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::tag.tag",
      "mappedBy": "article"
    },
    "article_contents": {
      "type": "dynamiczone",
      "components": [
        "content.body",
        "content.file",
        "content.twitter-link",
        "content.related-art"
      ],
      "max": 10,
      "min": 1
    }
  }
}
